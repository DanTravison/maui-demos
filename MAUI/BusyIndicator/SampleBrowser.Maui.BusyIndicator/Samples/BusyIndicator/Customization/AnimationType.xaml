<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.BusyIndicator.SfBusyIndicator.AnimationType"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      BackgroundColor="White">
    <localCore:SampleView.Content>
        <Grid BackgroundColor="Gray" HeightRequest="300" WidthRequest="300" Padding="1">
            <Grid ColumnSpacing="1" RowSpacing="1"  RowDefinitions="*,*" ColumnDefinitions="*,*" >
                <core:SfBusyIndicator BackgroundColor="White"  AnimationType="CircularMaterial" OverlayFill="Transparent" IsRunning="True">
                    <Grid>
                        <Label Text="Circular Material" VerticalOptions="Start" Margin="5" HorizontalTextAlignment="Center"/>
                    </Grid>
                </core:SfBusyIndicator>
                <core:SfBusyIndicator BackgroundColor="White"  AnimationType="Cupertino" IsRunning="True" Grid.Column="1">
                    <Grid>
                        <Label Text="Cupertino" VerticalOptions="Start" Margin="5" TextColor="Black" Padding="30,0" HorizontalTextAlignment="Center"/>
                    </Grid>
                </core:SfBusyIndicator>
                <core:SfBusyIndicator BackgroundColor="White"  AnimationType="LinearMaterial" IsRunning="True" Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid>
                        <Label Text="Linear Material" VerticalOptions="Start" Margin="5" HorizontalTextAlignment="Center" />
                    </Grid>
                </core:SfBusyIndicator>
            </Grid>
        </Grid>
    </localCore:SampleView.Content>
 
</localCore:SampleView>